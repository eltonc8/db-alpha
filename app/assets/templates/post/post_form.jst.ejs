<form>
  <div class='form-group'>
    <ul class='form-error'>
    </ul>
  </div>

  <div class='form-group'>
    <label for="post-title">Title: </label>
    <input
      name="post[title]"
      type="text"
      placeholder="Title (required)"
      value="<%= model.escape("title") %>"
      class="post-title post-form"
      id="form-group"/>
  </div>

  <div class='form-group'>
    <label for="post-shared-with">Shared with: </label>
    <input
      name="post[shared_with][]"
      type="checkbox"
      value="public"
      <%= /\bpublic\b/i.test(model.escape("shared_with")) ? "checked" : ""%>
      class="post-shared-with"/>public
  </div>

  <div class='form-group'>
    <label for="post-tags">Tags: </label>
    <input
      name="post[tags]"
      type="text"
      class="post-form"
      placeholder="Tags (optional)"
      value="<%= model.escape("tags") %>"
      id="post-tags"/>
  </div>

  <div class='form-group'>
  <label for="post-body">Body</label>
  <br>
  <textarea
    name="post[body]"
    placeholder="Body (optional)"
    data-provide="markdown-editable"
    class="post-form"
    id="post-body"><%= model.escape("body") %></textarea>
  </div>

  <input
    type="submit"
    class="btn post-submit"
    value="<%= model.isNew() ? "create post" : "save edit"%>">

  <button class="btn post-delete">Delete Post</button>
</form>
